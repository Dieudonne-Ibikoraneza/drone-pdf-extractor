# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Upload Directory
# Path to the directory where PDF files are stored
# Defaults to ./uploads/drone-analysis relative to backend root
# UPLOAD_DIR=./uploads/drone-analysis

# File Processing
MAX_FILE_SIZE=10485760  # 10MB in bytes

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGINS=*
